<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Numeric single value -->
        <EditText
            android:id="@+id/etValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="numberDecimal"
            android:hint="@string/hint_value"/>

        <!-- Blood pressure pair (оставлено на будущее, сейчас для каждой части — одиночное поле) -->
        <LinearLayout
            android:id="@+id/groupBp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/etBpSys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="@string/hint_bp_sys"/>

            <View
                android:layout_width="12dp"
                android:layout_height="0dp"/>

            <EditText
                android:id="@+id/etBpDia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="@string/hint_bp_dia"/>

        </LinearLayout>

        <!-- Categorical list -->
        <Spinner
            android:id="@+id/spCategory"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- Free text -->
        <EditText
            android:id="@+id/etText"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minLines="3"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:hint="@string/hint_text"/>

        <CheckBox
            android:id="@+id/cbSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_skip"/>

    </LinearLayout>
</ScrollView>
