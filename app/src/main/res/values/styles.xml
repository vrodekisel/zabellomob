<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextInputLayout: аутлайн, мягкие скругления, наш цвет обводки -->
    <style name="Widget.Zabello.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/md_secondary</item>
        <item name="hintTextColor">@color/md_secondary</item>
        <item name="endIconTint">@color/md_secondary</item>
    </style>

    <!-- Кнопка залитая -->
    <style name="Widget.Zabello.Button.Filled" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">12dp</item>
        <item name="android:insetBottom">12dp</item>
        <item name="backgroundTint">@color/md_secondary</item>
        <item name="rippleColor">@color/md_ripple</item>
    </style>

    <!-- Кнопка контурная -->
    <style name="Widget.Zabello.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/md_secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/md_ripple</item>
    </style>

    <!-- Заголовок экрана авторизации -->
    <style name="TextAppearance.Zabello.AuthTitle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
